#include "get_next_line.h"

//find \n ret 1 if found 
int	find_n(char *s)
{
	int	i;

	if (!s)
		return (0);
	i = 0;
	while (s[i] != '\0')
	{
		if (s[i] == '\n')
			return (1);
		i++;
	}
	return (0);
}

char	*get_next_line(int fd)
{
	static char	*tmp;
	char		*ret;
	char		buf[BUFFER_SIZE + 1];
	int			rfd;

	if (fd < 0 || BUFFER_SIZE <= 0)
		return (NULL);
	rfd = read(fd, buf, BUFFER_SIZE);
	buf[rfd] = '\0';
	//printf("A\n");
	if (rfd < 0 || (rfd == 0 && !tmp))
	{
		tmp = NULL;
		return (NULL);
	}
	
	while (rfd > 0)
	{
		//printf("B\n");
		//printf("tmp = %s \n", tmp);
		tmp = ft_strjoin(tmp, buf);
		//printf("C\n");
		if (find_n(tmp))
		{
			printf("fn\n");
			break ;
		}
		//printf("D\n");
		rfd = read(fd, buf, BUFFER_SIZE);
	}
	//printf("E\n")
	ret = sp_strdup_reloc(tmp);
	tmp += 10;
	if (rfd == 0 && (sp_strlen(tmp, 0) == 0))
	{
		free(tmp);
		tmp = NULL;
	}
	return (ret);
}
